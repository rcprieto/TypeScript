<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-8">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Contatos Abaixo</p>
            <%- include('includes/messages') %>

            <% if(contatos.length > 0) { %>
            <div class="responsive-table">
                <table class="table my-3">
                    <% contatos.forEach(contato => {    %>
                    <tr>
                        <td><%=contato.nome%></td>
                        <td><%= contato.sobrenome %></td>
                        <td><%= contato.telefone %></td>
                        <td><%= contato.email %></td>
                        <td><a class="btn btn-success" href="/contato/index/<%= contato._id %>">Editar</a></td>
                        <td><a class="btn btn-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                    </tr>
                    <% }); %>

                </table>
            </div>
            <% } else { %>
            NÃ£o existem contatos na sua agenda.
            <% }  %>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>


<%- include('includes/footer') %>