<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Login</h1>
        <p class="text-center lead">Faça se login ou crie sua conta abaixo</p>

        <%-include('includes/messages'); %>

        <div class="row">
            <div class="col-lg">
                <h4>Cadastrar no sistema</h4>
                <p>Se não tem uma conta, cadastre-se</p>
                <div class="form-group">
                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <div class="mb-3">
                            <label>Seu Email</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                            <label>Senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar sua Conta</button>
                    </form>
                </div>
            </div>

            <div class="col-lg">
                <div class="form-group">
                    <form action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <h4>Entrar no Sistema</h4>
                        <p>Se já tem uma conta, faça seu login abaixo</p>
                        <div class="mb-3">
                            <label>Seu Email</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                            <label>Senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('includes/footer') %>